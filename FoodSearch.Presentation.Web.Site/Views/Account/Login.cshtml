@model FoodSearch.Presentation.Web.Site.Models.LoginModel
@{
    ViewBag.Title = "FoodSearch.pl - Logowanie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div id="loginbox" style="margin-top: 50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Logowanie</div>
                <div style="float: right; font-size: 80%; position: relative; top: -10px"><a href="#">Zapomniałeś hasła?</a></div>
            </div>

            <div style="padding-top: 30px" class="panel-body">
                @if (!string.IsNullOrEmpty(Model.Email))
                {
                    <div class="alert alert-danger col-sm-12">
                        Nieprawidłowy adres email lub hasło!
                    </div>
                }
                
                <form class="form-horizontal" role="form" method="POST" action="@Url.Action("Login")">
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input type="email" class="form-control" name="email" value="@Model.Email" placeholder="Adres email" required>
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="login-password" type="password" class="form-control" name="password" placeholder="Hasło" required>
                    </div>
                    <div style="margin-top: 10px" class="form-group">
                        <div class="col-sm-12 controls">
                            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                            <input type="submit" class="btn btn-primary btn-block" value="Zaloguj się"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid #888; padding-top: 15px; font-size: 85%">
                                Nie masz konta? <a href="@Url.Action("Register")"> Utwórz je tutaj </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>