@model FoodSearch.Presentation.Web.Site.Models.ResetPasswordModel

@{
    ViewBag.Title = "FoodSearch.pl - Resetowanie hasła";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div id="loginbox" style="margin-top: 50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-12 col-sm-offset-2 col-xs-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Resetowanie hasła</div>
            </div>

            <div style="padding-top: 30px" class="panel-body">
                
                <h4 class="">
                    Zapomniałeś hasło?
                </h4>
                <form class="form-horizontal" role="form" method="POST" action="@Url.Action("ForgottenPassword")">
                    @if (Model.RequestCreated)
                    {
                        <span class="help-block">
                            Wysłaliśmy Ci wiadomość z instrukcjami jak ustawić nowe hasło.
                        </span>
                    }
                    else
                    {
                        <span class="help-block">
                            Podaj adres email który używasz podczas logowania
                            <br>
                            Wyślemy Ci wiadomość z instrukcjami jak ustawić nowe hasło.
                        </span>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="email" class="form-control" name="email" value="@Model.Email" placeholder="Adres email" required>
                        </div>
                        <div style="margin-top: 10px" class="form-group">
                            <div class="col-sm-12 controls">
                                <input type="submit" class="btn btn-primary btn-block" value="Resetuj hasło" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 control">
                                <div style="border-top: 1px solid #888; padding-top: 15px; font-size: 85%">
                                    Nie masz konta? <a href="@Url.Action("Register", new {area = ""})"> Utwórz je tutaj </a>
                                    <br/>
                                    Posiadasz już konto? <a href="@Url.Action("Login", new {area = ""})"> Zaloguj się tutaj </a>
                                </div>
                            </div>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>