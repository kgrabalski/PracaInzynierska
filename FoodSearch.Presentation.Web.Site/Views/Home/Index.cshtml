@{
    ViewBag.Title = "FoodSearch - strona główna";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeadSection
{
    <link rel="stylesheet" href="~/Content/Selectize/css/selectize.css" />
}

@section ScriptSection
{
    <script type="text/javascript" src="~/Scripts/selectize.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Frontend/HomePage.js"></script>
}

<div class="row">
    <div class="col-lg-12 col-xs-12">
        <div class="well col-lg-12 col-xs-12">
            <div class="col-lg-8 col-lg-offset-2 col-xs-12">
                <form class="form-horizontal" method="POST" action="@Url.Action("Restaurants")">
                    <fieldset>
                        <legend class="text-center">Znajdź restauracje</legend>

                        <div class="box-body">
                            <div class="form-group">
                                <label for="selectCity" class="control-label">Miasto</label>
                                <select id="selectCity" required></select>
                            </div>
                            <div class="form-group">
                                <label for="selectStreet" class="control-label">Ulica</label>
                                <select id="selectStreet" required></select>
                            </div>
                            <div class="form-group">
                                <label for="selectNumber" class="control-label">Numer</label>
                                <select id="selectNumber" name="addressId" required></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-primary btn-block" value="Szukaj restauracji" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>