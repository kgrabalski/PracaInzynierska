@model System.Collections.Generic.IEnumerable<FoodSearch.Data.Mapping.StoredProcedure.Results.RestaurantInfo>

@{
    ViewBag.Title = "Restaurants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Restaurants</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LogoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeTo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantId)
        </td>
        <td>
            <a href="/Home/RestaurantDishes?restaurantId=@item.RestaurantId">@item.RestaurantName</a>
        </td>
        <td>
            <img src="/Home/GetImage?imageId=@item.LogoId"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeFrom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeTo)
        </td>
    </tr>
}

</table>
