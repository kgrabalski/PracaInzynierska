@model IEnumerable<FoodSearch.BusinessLogic.Domain.Restaurant.Models.RestaurantInfo>

@{
    ViewBag.Title = "Restaurants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-xs-12">
        <div class="well">
            Filtry
        </div>
    </div>
</div>
<div class="row">

    <div class="col-lg-12 col-xs-12">
        <div class="well">
            <div class="list-group">
                @foreach (var ri in Model)
                {
                    <a href="@Url.Action("RestaurantDishes", new {area = "", restaurantId = ri.RestaurantId})" class="list-group-item">
                        <div class="media col-md-3">
                            <figure class="pull-left">
                                <img src="@Url.Action("GetImage", "Home", new {area = "", imageId = ri.LogoId})" />
                            </figure>
                        </div>
                        <div class="col-md-6">
                            <h4 class="list-group-item-heading">@ri.RestaurantName</h4>
                            <p class="list-group-item-text">
                                @ri.RestaurantName
                            </p>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="panel panel-default">
                                <div class="panel-body text-center">
                                    <h1 class="rating-num">
                                        @ri.RestaurantRating.ToString("0.0")
                                    </h1>
                                    <div class="rating">
                                        @for (int i = 0; i < ri.StarsCount; i++)
                                        {
                                            <span class="glyphicon glyphicon-star"></span>
                                        }
                                        @for (int i = 5 - ri.StarsCount; i > 0; i--)
                                        {
                                            <span class="glyphicon glyphicon-star-empty"></span>
                                        }                                       
                                    </div>
                                    <div>
                                        <span class="glyphicon glyphicon-user"></span>@ri.UsersVoted głosów
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>

</div>