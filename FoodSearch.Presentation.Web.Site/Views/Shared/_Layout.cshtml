                        </div>

                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li><a href="@Url.Action("Index", "Restaurants", new {area = ""})">Współpracujące restauracje</a></li>
                                <li><a href="@Url.Action("Index", "AddObject", new {area = ""})">Dodaj obiekt</a></li>
                                <li><a href="@Url.Action("Index", "Contact", new {area = ""})">Kontakt</a></li>
                            </ul>

                            <ul class="nav navbar-nav navbar-right">
                               @{Html.RenderAction("UserLinks", "Home");}
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        
        <section>
            <div class="container content-wrapper">
               @RenderBody() 
            </div>
        </section>
