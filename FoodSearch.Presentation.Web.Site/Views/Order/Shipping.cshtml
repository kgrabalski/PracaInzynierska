@model FoodSearch.Presentation.Web.Site.Models.ShippingModel
@{
    ViewBag.Title = "FoodSearch.pl - Dostawa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section ScriptSection
{
    @Scripts.Render("~/js/frontend/shipping")
}

<div class="row">
    <div class="col-lg-12 col-xs-12">
        <div class="well">
            <div class="stepwizard">
                <div class="stepwizard-row">
                    <div class="stepwizard-step">
                        <a class="btn btn-primary btn-circle" href="@Url.Action("Basket")">1</a>
                        <p><a href="@Url.Action("Basket")">Koszyk</a></p>
                    </div>
                    <div class="stepwizard-step">
                        <button type="button" class="btn btn-primary btn-circle" disabled="disabled">2</button>
                        <p>Dostawa i płatność</p>
                    </div>
                    <div class="stepwizard-step">
                        <button type="button" class="btn btn-default btn-circle" disabled="disabled">3</button>
                        <p>Smacznego!</p>
                    </div>
                </div>
            </div>

            <h1 class="text-center">Dostawa i płatność</h1>
            
            <form method="POST" action="@Url.Action("CreateOrder")" class="form-horizontal">
                
                <div class="form-group">
                    <label for="PaymentType" class="col-md-3 control-label">Sposób płatności</label>
                    <div class="col-md-9">
                        <select name="PaymentType" id="selectPaymentType" required placeholder="Sposób zapłaty">
                            @foreach (var type in Model.PaymentTypes)
                            {
                                <option value="@type.Id" selected="selected">@type.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="DeliveryType" class="col-md-3 control-label">Sposób dostawy</label>
                    <div class="col-md-9">
                        <select name="DeliveryType" id="selectDeliveryType" required placeholder="Sposób dostawy">
                            @foreach (var type in Model.DeliveryTypes)
                            {
                                <option value="@type.Id" selected="selected">@type.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div id="deliveryData">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Imię</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" placeholder="Imię" value="@Model.DeliveryAddress.FirstName" disabled="disabled">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Nazwisko</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" placeholder="Nazwisko" value="@Model.DeliveryAddress.LastName" disabled="disabled">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Miasto</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" placeholder="Miasto" value="@Model.DeliveryAddress.City" disabled="disabled">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Ulica</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" placeholder="Ulica" value="@Model.DeliveryAddress.Street" disabled="disabled">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Number budynku</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" placeholder="Numer budynku" value="@Model.DeliveryAddress.StreetNumber" disabled="disabled">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Numer mieszkania</label>
                        <div class="col-md-9">
                            <input type="text" name="FlatNumber" class="form-control" placeholder="Numer mieszkania" value="@Model.DeliveryAddress.FlatNumber">
                        </div>
                    </div>
                </div>

                <div class="form-group" style="margin-top: 10px;">
                    <div class="col-sm-12">
                        <input type="hidden" name="AddressId" value="@Model.DeliveryAddress.AddressId"/>
                        <input type="submit" class="btn btn-primary btn-block" value="Zapłać" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>