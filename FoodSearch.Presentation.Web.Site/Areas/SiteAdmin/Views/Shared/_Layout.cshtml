@{
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="FoodSearch.SiteAdmin">
<head>
    <meta charset="UTF-8">
    <title>FoodSearch | Dashboard</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name='viewport'>

    @Styles.Render("~/css/admin/common")

    @RenderSection("HeadSection", false)
</head>
<body class="skin-blue">
    <header class="header">
        <a href="@Url.Action("Index", "Home", new {area = "SiteAdmin"})" class="logo">
            FoodSearch Admin
        </a>
        <nav class="navbar navbar-static-top" role="navigation">
            <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="navbar-right">
                <ul class="nav navbar-nav">

                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="glyphicon glyphicon-user"></i>
                            <span>@User.Identity.Name <i class="caret"></i></span>
                        </a>
                        <ul class="dropdown-menu">

                            <li class="user-header bg-light-blue">
                                <img src="~/Images/Admin/avatar3.png" class="img-circle" alt="User Image" />
                                <p>
                                    @User.Identity.Name
                                    <small>Member since Nov. 2012</small>
                                </p>
                            </li>

                            <li class="user-body">
                                <div class="col-xs-4 text-center">
                                    <a href="#">Followers</a>
                                </div>
                                <div class="col-xs-4 text-center">
                                    <a href="#">Sales</a>
                                </div>
                                <div class="col-xs-4 text-center">
                                    <a href="#">Friends</a>
                                </div>
                            </li>

                            <li class="user-footer">
                                <div class="pull-right">
                                    <a href="@Url.Action("Logout", "Account", new {area = "SiteAdmin"})" class="btn btn-default btn-flat">Wyloguj</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    @RenderBody()

    @Scripts.Render("~/js/admin/common")
    @RenderSection("ScriptSection", false)
</body>
</html>