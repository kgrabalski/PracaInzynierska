<aside class="right-side" id="pageDishGroups">
    <section class="content-header">
        <h1>
            Miasta
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Strona główna</a></li>
            <li class="active">Miasta</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Miasta</h3>
                        <button class="btn btn-primary pull-right" ng-click="addNew()">Dodaj</button>
                    </div>
                    <div class="box-body table-responsive">
                        <table id="citiesList" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Nazwa</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="c in cities.Items">
                                <tr>
                                    <td>{{c.Name}}</td>
                                    <td>
                                        <button ng-click="remove($index)" class="btn btn-primary">Usuń</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>

<script type="text/ng-template" id="addCityModal">
    <div class="modal-header">
        <button type="button" class="close" ng-click="cancel()">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Dodaj miasto</h4>
    </div>
    <div class="modal-body">
        <form role="form" name="addCForm">
            <div class="box-body">
                <div class="form-group">
                    <label for="addCName" class="control-label">Nazwa miasta:</label>
                    <input type="text" id="addCName" required ng-model="toAdd.Name" placeholder="Nazwa miasta" class="form-control" />
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="cancel()">Anuluj</button>
        <button type="button" class="btn btn-primary" ng-click="add()" ng-disabled="!addCForm.$valid">Dodaj</button>
    </div>
</script>

<script type="text/ng-template" id="removeCityModal">
    <div class="modal-header">
        <button type="button" class="close" ng-click="cancel()">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Usuń miasto</h4>
    </div>
    <div class="modal-body">
        <form role="form" name="removeCForm">
            <div class="box-body">
                <div class="form-group">
                    Czy napewno chcesz usunąć miasto {{city.Name}}?
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="cancel()">Anuluj</button>
        <button type="button" class="btn btn-primary" ng-click="remove()">Usuń</button>
    </div>
</script>