<aside class="right-side" id="pageUsers">
    <section class="content-header">
        <h1>
            Użytkownicy
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Strona główna</a></li>
            <li class="active">Użytkownicy</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Lista użytkowników</h3>
                    </div>
                    <div class="box-body">
                        <form class="form">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-search"></span>
                                    </div>
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button" ng-click="clearSearch()">
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </button>
                                    </span>
                                    <input type="text" class="form-control" placeholder="Nazwisko, email"
                                           ng-model="query"/>
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button" ng-click="search()">Szukaj</button>
                                    </span>
                                </div>
                            </div>
                        </form>

                        <button class="btn btn-primary btn-block" ng-click="getMore()">
                            <span class="glyphicon glyphicon-refresh"></span> Więcej
                        </button>

                        <table id="usersList" class="table table-striped table-hover table-responsive table-condensed">
                            <thead>
                            <tr>
                                <th>Imię</th>
                                <th>Nazwisko</th>
                                <th>Email</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr ng-repeat="u in users.Items">
                                <td>{{u.FirstName}}</td>
                                <td>{{u.LastName}}</td>
                                <td>{{u.Email}}</td>
                                <td>
                                    <button ng-click="showDetails($index)" class="btn btn-primary pull-right ">
                                        Szczegóły
                                    </button>
                                    <button ng-click="changeState($index)" class="btn pull-right btn-activate"
                                            ng-class="{'btn-success': !u.UserActive, 'btn-warning': u.UserActive}">
                                        {{u.UserActive ? 'Dezaktywuj' : 'Aktywuj'}}
                                    </button>

                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>

<script type="text/ng-template" id="showUserDetailsModal">
    <div class="modal-header">
        <button type="button" class="close" ng-click="cancel()">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Dane użytkownika</h4>
    </div>
    <div class="modal-body">
        <table class="table">
            <tr>
                <td>Imię:</td>
                <td>{{user.FirstName}}</td>
            </tr>
            <tr>
                <td>Nazwisko:</td>
                <td>{{user.LastName}}</td>
            </tr>
            <tr>
                <td>Adres email:</td>
                <td><a ng-href="mailto:{{user.Email}}">{{user.Email}}</a></td>
            </tr>
            <tr>
                <td>Numer telefonu:</td>
                <td>{{user.PhoneNumber}}</td>
            </tr>
            <tr>
                <td>Data rejestracji:</td>
                <td>{{user.CreateDate}}</td>
            </tr>
        </table>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" ng-click="cancel()">Zamknij</button>
    </div>
</script>