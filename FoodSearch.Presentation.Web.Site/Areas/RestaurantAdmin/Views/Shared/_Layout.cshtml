@{
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="FoodSearch.RestaurantAdmin">
<head>
    <meta charset="UTF-8">
    <title>FoodSearch | Dashboard</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name='viewport'>

    @Styles.Render("~/css/admin/common")

    @RenderSection("HeadSection", false)
</head>
<body class="skin-blue">
    <header class="header">
        <a href="@Url.Action("Index", "Home", new {area = "RestaurantAdmin"})" class="logo">
            FoodSearch
        </a>
        <nav class="navbar navbar-static-top" role="navigation">
            <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="navbar-right">
                <ul class="nav navbar-nav">

                    @Html.Action("UserMenu", "Home", new {area = "RestaurantAdmin"})
                </ul>
            </div>
        </nav>
    </header>
    @RenderBody()

    @Scripts.Render("~/js/admin/common")
    @RenderSection("ScriptSection", false)
    
</body>
</html>