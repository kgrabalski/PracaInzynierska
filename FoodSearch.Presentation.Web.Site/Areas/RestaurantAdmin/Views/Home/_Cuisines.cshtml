<aside class="right-side" id="pageCuisines" style="display:none">
    <section class="content-header">
        <h1>
            Kuchnie
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Strona główna</a></li>
            <li class="active">Kuchnie</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <button class="btn btn-primary" id="addRestaurantCuisine">Dodaj</button>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Kuchnie serwowane przez restaurację</h3>
                    </div>
                    <div class="box-body table-responsive">
                        <table id="restaurantCuisinesList" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Nazwa</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: RestaurantCuisines">
                                <tr>
                                    <td data-bind="text: Name"></td>
                                    <td>
                                        <button data-bind="click: $parent.RemoveRestaurantCuisine" class="btn btn-primary">Usuń</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <div class="modal fade" id="addRestaurantCuisineModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Dodaj kuchnię</h4>
                </div>
                <div class="modal-body">
                    <form role="form" id="addRCForm">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="addRCName" class="control-label">Kuchnia</label>
                                <select id="addRCName" required
                                        data-bind="options: AvailableCuisines, optionsText: 'Name', optionsValue: 'CuisineId',
                                        optionsCaption: 'Wybierz kuchnię'">
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Anuluj</button>
                    <button type="button" class="btn btn-primary">Dodaj</button>
                </div>
            </div>
        </div>
    </div>
</aside>
