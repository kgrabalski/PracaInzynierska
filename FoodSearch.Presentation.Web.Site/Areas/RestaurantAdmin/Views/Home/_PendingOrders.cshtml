<aside class="right-side" id="pagePendingOrders">
    <section class="content-header">
        <h1>
            Bieżące zamówienia
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Strona główna</a></li>
            <li class="active">Bieżące amówienia</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Bieżące zamówienia</h3>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Dane zamawiającego</th>
                                <th>Szczegóły zamówienia</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="o in orders">
                                <td>
                                    <span class="text-center">{{o.CreateDate}}</span>
                                    <br/>
                                    <button class="btn btn-primary btn-block" ng-click="completeOrder($index)">Zamknij zamówienie</button>
                                </td>
                                <td>
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <td>Imię: </td>
                                                <td><b>{{o.User.FirstName}}</b></td>
                                            </tr>
                                            <tr>
                                                <td>Nazwisko:</td>
                                                <td><b>{{o.User.LastName}}</b></td>
                                            </tr>
                                            <tr>
                                                <td>Adres email:</td>
                                                <td><b><a ng-href="mailto:{{o.User.Email}}">{{o.User.Email}}</a></b></td>
                                            </tr>
                                            <tr>
                                                <td>Numer telefony:</td>
                                                <td><b>{{o.User.PhoneNumber}}</b></td>
                                            </tr>
                                            <tr>
                                                <td>Adres dostawy:</td>
                                                <td><b>{{o.DeliveryAddress}}</b></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                                <td>
                                    <table class="table">
                                        <tr>
                                            <th>Danie</th>
                                            <th>Ilość</th>
                                        </tr>
                                        <tr ng-repeat="i in o.Items">
                                            <td>{{i.Name}}</td>
                                            <td>{{i.Quantity}}</td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</aside>

<script type="text/ng-template" id="completeOrderModal">
    <div class="modal-header">
        <button type="button" class="close" ng-click="cancel()">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Zakończenie zamówienia</h4>
    </div>
    <div class="modal-body">
        <form role="form" name="cancelForm">
            <div class="box-body">
                <div class="box-body">
                    Proszę potwierdzić zakończenie zamówienia.
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="cancel()">Anuluj</button>
        <button type="button" class="btn btn-primary" ng-click="completeOrder()">Zatwierdź</button>
    </div>
</script>