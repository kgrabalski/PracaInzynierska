<aside class="right-side" id="pageOpeningHours">
    <section class="content-header">
        <h1>
            Godziny otwarcia
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Strona główna</a></li>
            <li class="active">Godziny otwarcia</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Godziny otwarcia restauracji</h3>
                    </div>
                    <div class="box-body">
                        <button class="btn btn-primary btn-block" ng-click="addNew()">Dodaj</button>

                        <table class="table table-striped table-hover table-responsive">
                            <thead>
                                <tr>
                                    <th>Dzień</th>
                                    <th>Od godziny</th>
                                    <th>Do godziny</th>
                                    <th class="actions"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="oh in openingHours.Items | orderBy:['Day','TimeFrom','TimeTo']">
                                    <td>{{oh.DayName}}</td>
                                    <td>{{oh.TimeFrom}}</td>
                                    <td>{{oh.TimeTo}}</td>
                                    <td>
                                        <button ng-click="remove($index)" class="btn btn-primary pull-right">Usuń</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>

<script type="text/ng-template" id="addOpeningHourModal">
    <div class="modal-header">
        <button type="button" class="close" ng-click="cancel()">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Dodaj godzinę otwarcia</h4>
    </div>
    <div class="modal-body">
        <form role="form" name="addOHForm">
            <div class="box-body">
                <div class="form-group">
                    <label for="addOHDay" class="control-label">Dzień</label>
                    <select id="addOHDay" required placeholder="Wybierz dzień" ng-model="toAdd.Day" selectize="options" options="daysList"/>
                </div>
                <div class="form-group">
                    <label for="addOHTimeFrom" class="control-label">Godzina od</label>
                    <div class="input-group input-append bootstrap-timepicker">
                        <input id="addOHTimeFrom" type="time" class="form-control" placeholder="Godzina od" ng-model="toAdd.TimeFrom" required/>
                        <div class="input-group-addon">
                            <i class="fa fa-clock-o"></i>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="addOHTimeTo" class="control-label">Godzina do</label>
                    <div class="input-group input-append bootstrap-timepicker">
                        <input id="addOHTimeTo" type="time" class="form-control" placeholder="Godzina do" ng-model="toAdd.TimeTo" required/>
                        <div class="input-group-addon">
                            <i class="fa fa-clock-o"></i>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="cancel()">Anuluj</button>
        <button type="button" class="btn btn-primary" ng-click="add()" ng-disabled="!addOHForm.$valid" >Dodaj</button>
    </div>
</script>

<script type="text/ng-template" id="removeOpeningHourModal">
    <div class="modal-header">
        <button type="button" class="close" ng-click="cancel()">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Usuń godziny otwarcia</h4>
    </div>
    <div class="modal-body">
        <form role="form" name="removeOHForm">
            <div class="box-body">
                <div class="form-group">
                    Czy napewno chcesz usunąć wybraną godzinę otwarcia?
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="cancel()">Anuluj</button>
        <button type="button" class="btn btn-primary" ng-click="remove()">Usuń</button>
    </div>
</script>