<aside class="right-side" id="pageOpinions">
    <section class="content-header">
        <h1>
            Opinie
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Strona główna</a></li>
            <li class="active">Opinie</li>
        </ol>
    </section>
    
    <fieldset>
        <legend>Podsumowanie</legend>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="well well-sm">
                    <div class="row">
                        <div class="col-xs-4 col-md-6 text-center">
                            <h1 class="rating-num">{{rating.TotalRating}}</h1>
                            <div class="rating">
                                <span ng-repeat="s in restaurantStars" class="{{s.style}}"></span>
                            </div>
                            <div>
                                <a ng-click="setRating(0)">
                                    <span class="glyphicon glyphicon-user"></span>
                                    <span>{{rating.UsersVoted}}</span> głosów
                                </a>
                            </div>
                        </div>
                        <div class="col-xs-8 col-md-6">
                            <div class="row rating-desc">
                                <div class="col-xs-3 col-md-3 text-right">
                                    <a ng-click="setRating(5)">
                                        <span class="glyphicon glyphicon-star"></span>5
                                    </a>
                                </div>
                                <div class="col-xs-8 col-md-9">
                                    <div class="progress progress-striped">
                                        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20"
                                             aria-valuemin="0" aria-valuemax="100" style="width: {{rating.Percentage5Stars + '%'}};>
                                            <span class="sr-only"><span>{{rating.Percentage5Stars}}</span>%</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3 col-md-3 text-right">
                                    <a ng-click="setRating(4)">
                                        <span class="glyphicon glyphicon-star"></span>4
                                    </a>
                                </div>
                                <div class="col-xs-8 col-md-9">
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20"
                                             aria-valuemin="0" aria-valuemax="100" style="width: {{rating.Percentage4Stars + '%'}};>
                                            <span class="sr-only"><span>{{rating.Percentage4Stars}}</span>%</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3 col-md-3 text-right">
                                    <a ng-click="setRating(3)">
                                        <span class="glyphicon glyphicon-star"></span>3
                                    </a>
                                </div>
                                <div class="col-xs-8 col-md-9">
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20"
                                             aria-valuemin="0" aria-valuemax="100" style="width: {{rating.Percentage3Stars + '%'}};>
                                            <span class="sr-only"><span>{{rating.Percentage3Stars}}</span>%</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3 col-md-3 text-right">
                                    <a ng-click="setRating(2)">
                                        <span class="glyphicon glyphicon-star"></span>2
                                    </a>
                                </div>
                                <div class="col-xs-8 col-md-9">
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="20"
                                             aria-valuemin="0" aria-valuemax="100" style="width: {{rating.Percentage2Stars + '%'}};>
                                            <span class="sr-only"><span>{{rating.Percentage2Stars}}</span>%</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-3 col-md-3 text-right">
                                    <a ng-click="setRating(1)">
                                        <span class="glyphicon glyphicon-star"></span>1
                                    </a>
                                </div>
                                <div class="col-xs-8 col-md-9">
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80"
                                             aria-valuemin="0" aria-valuemax="100" style="width: {{rating.Percentage1Star + '%'}};">
                                            <span class="sr-only"><span>{{rating.Percentage1Star}}</span>%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Opinie</h3>
                    </div>
                    <div class="box-body table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Data</th>
                                    <th>Ocena</th>
                                    <th>Użytkownik</th>
                                    <th>Opinia</th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="o in opinions.Items | orderBy:['Date']">
                                <tr>
                                    <td>{{o.Date}}</td>
                                    <td>{{o.Rating}}</td>
                                    <td>{{o.UserName}}</td>
                                    <td>{{o.Comment}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>
