<aside class="right-side" id="pageFinancialDaily">
    <section class="content-header">
        <h1>
            Raport finansowy dzienny
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Strona główna</a></li>
            <li class="active">Raport finansowy - dzienny</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Raport finansowy dzienny</h3>
                    </div>

                    <div class="box-body">
                        @{Html.RenderPartial("_DateRange");}
                        <table class="table table-striped table-hover table-responsive">
                            <thead>
                            <tr>
                                <th>Rok</th>
                                <th>Miesiąc</th>
                                <th>Dzień</th>
                                <th>Kwota</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr ng-repeat="r in report">
                                <td>{{r.Year}}</td>
                                <td>{{r.Month}}</td>
                                <td>{{r.Day}}</td>
                                <td>{{r.Amount}} zł.</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>