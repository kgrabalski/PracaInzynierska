<aside class="right-side" id="pageRestaurant">
    <section class="content-header">
        <h1>
            Restauracja
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Strona główna</a></li>
            <li class="active">Restauracja</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Dane restauracji</h3>
                    </div>
                    <div class="box-body col-md-6">
                        <form class="form-horizontal" id="restaurantData">
                            <div class="box-body">
                                <div class="form-group">
                                    <label for="restName" class="control-label">Nazwa restauracji:</label>
                                    <input type="text" class="form-control" id="restName" ng-model="data.Name" required/>
                                </div>
                                <div class="form-group">
                                    <label>
                                        <input type="checkbox" ng-model="data.IsOpen"> Restauracja otwarta
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label for="minAmount" class="control-label">Minimalna wartość zamówenia:</label>
                                    <div class="input-group">
                                        <input type="number" min="0" step="0.01" class="form-control" id="minAmount" ng-model="data.MinOrderAmount" required/>
                                        <div class="input-group-addon">zł.</div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="deliveryPrice" class="control-label">Koszt dostawy:</label>
                                    <div class="input-group">
                                        <input type="number" min="0" step="0.01" class="form-control" id="deliveryPrice" ng-model="data.DeliveryPrice" required/>
                                        <div class="input-group-addon">zł.</div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="freeDelivery" class="control-label">Darmowa dostawa od::</label>
                                    <div class="input-group">
                                        <input type="number" min="0" step="0.01" class="form-control" id="freeDelivery" ng-model="data.FreeDeliveryFrom" required/>
                                        <div class="input-group-addon">zł.</div>
                                    </div>
                                </div>
                            </div>
                            <input type="submit" class="btn btn-primary btn-block" value="Zapisz"
                                   ng-click="updateRestaurant()" ng-disabled="!canSave"/>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>
