<aside class="right-side" id="pageDishGroups">
    <section class="content-header">
        <h1>
            Grupy dań
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Strona główna</a></li>
            <li class="active">Grupy dań</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Grupy dań</h3>
                    </div>

                    <div class="box-body">
                        <button class="btn btn-primary btn-block" ng-click="addNew()">Dodaj</button>

                        <table class="table table-striped table-hover table-responsive">
                            <thead>
                            <tr>
                                <th>Nazwa</th>
                                <th class="actions"></th>
                            </tr>
                            </thead>
                            <tbody ng-repeat="g in dishGroups.Items">
                            <tr>
                                <td>{{g.Name}}</td>
                                <td>
                                    <button ng-click="edit($index)" class="btn btn-primary">Edytuj</button>
                                    <button ng-click="remove($index)" class="btn btn-primary">Usuń</button>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>

<script type="text/ng-template" id="addDishGroupModal">
    <div class="modal-header">
        <button type="button" class="close" ng-click="cancel()">&times;</button>
        <h4 class="modal-title" id="myModalLabel">{{operation}} grupę dań</h4>
    </div>
    <div class="modal-body">
        <form role="form" name="addDGForm">
            <div class="box-body">
                <div class="form-group">
                    <label for="addDGName" class="control-label">Nazwa grupy dań:</label>
                    <input type="text" id="addDGName" required ng-model="toAdd.Name" placeholder="Nazwa grupy" class="form-control"/>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="cancel()">Anuluj</button>
        <button type="button" class="btn btn-primary" ng-click="add()" ng-disabled="!addDGForm.$valid" ng-hide="edit">{{operation}}</button>
    </div>
</script>

<script type="text/ng-template" id="removeDishGroupModal">
    <div class="modal-header">
        <button type="button" class="close" ng-click="cancel()">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Usuń grupę dań</h4>
    </div>
    <div class="modal-body">
        <form role="form" name="removeDGForm">
            <div class="box-body">
                <div class="form-group">
                    Czy napewno chcesz grupę dań {{dishGroup.Name}}?
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="cancel()">Anuluj</button>
        <button type="button" class="btn btn-primary" ng-click="remove()">Usuń</button>
    </div>
</script>